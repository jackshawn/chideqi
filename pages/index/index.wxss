/**index.wxss**/

.wrap {
  display: block;
  width: 620rpx;
  height: 900rpx;
  margin: 65rpx auto 80rpx;
  background: #f7f7f7;
  border-radius: 10rpx;
  position: relative;
  box-shadow: 3rpx 3rpx 8rpx rgba(0,0,0,0.3);
}
.placeholder-text {
  color: #ccc;
  font-size: 24rpx;
}
.wrap .sn {
  width: 620rpx;
  height: 900rpx;
  line-height: 2em;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 7;
}
.wrap .cover-single{
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 8;
  width: 580rpx;
  /*padding-left: 40rpx;*/
  height: 900rpx;
  padding: 0 20rpx;
  overflow-y: scroll;
  background: rgba(255,255,255,.9);
}
.wrap .cover-single .num{
  display: block;
  font-size: 75rpx;
  font-weight: bold;
  margin: 20rpx auto 18rpx;
}
.wrap .cover-single .user {
  display: flex;
  margin: 16rpx 0;
}
.wrap .cover-single .user span{
  display: inline-block;
  height: 64rpx;
  font-size: 28rpx;
  line-height: 64rpx;
}
.wrap .cover-single .user span.name {
  width: 180rpx;
  margin-left: 20rpx;
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap;
}
.wrap .cover-single .user span.money {width: 80rpx}
.wrap .cover-single .user span.money {width: 160rpx}

.wrap .cover-single .user image{
  display: inline-block;
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
}

.wrap .btn-fetch{
  position: absolute;
  bottom: -50rpx;
  right: 50rpx;
  z-index: 9;
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 50rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  box-shadow: 3rpx 3rpx 8rpx rgba(0,0,0,0.3);
}
.btn-switch {
  width: 620rpx;
  margin: 0 auto;
  font-size: 28rpx;
  line-height: 2.5;
  border-radius: 6rpx;
  text-align: center;
  box-shadow: 3rpx 3rpx 8rpx rgba(0,0,0,0.3);
  color: #fff;
}

.btn-help {
  width: 620rpx;
  font-size: 28rpx;
  margin: 20rpx auto 0;
  text-align: center;
}
.btn-clear {
  display: block;
  width: 580rpx;
  font-size: 36rpx;
  margin-bottom: 60rpx;
  text-align: center;
  text-decoration: underline;
}
